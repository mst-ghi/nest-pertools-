{
    "name": "nest-pertools",
    "version": "0.5.0",
    "description": "Persian tools methods",
    "author": "Mostafa Gholami <mostafagholamidev@gmail.com>",
    "license": "MIT",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "scripts": {
        "start:dev": "tsc -w",
        "build": "tsc",
        "prepare": "npm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "keywords": [
        "nestjs",
        "persian",
        "tools",
        "date",
        "convert",
        "validate"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mst-ghi/nest-pertools-.git"
    },
    "bugs": "https://github.com/mst-ghi/nest-pertools-.git",
    "peerDependencies": {
        "@nestjs/common": "^7.0.0"
    },
    "devDependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/testing": "7.4.4",
        "@types/express": "4.17.8",
        "@types/jest": "24.0.13",
        "@types/node": "14.10.0",
        "@types/supertest": "2.0.10",
        "jest": "26.4.2",
        "prettier": "2.1.1",
        "supertest": "4.0.2",
        "ts-jest": "26.3.0",
        "ts-node": "9.0.0",
        "tsc-watch": "4.2.9",
        "tsconfig-paths": "3.9.0",
        "tslint": "6.1.3",
        "typescript": "4.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "dependencies": {
        "persian-tools2": "^1.5.0"
    }
}
